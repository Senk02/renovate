{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    "github>senk02/renovate:automerge"
  ],
  "dependencyDashboardTitle": "Tina's Renovate Dashboard 👨🏾‍💻",
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "timezone": "America/Chicago",
  "commitBodyTable": true,
  "rebaseWhen": "conflicted",
  "platformCommit": true,
  "ignorePaths": [
    "**/*.sops.*"
  ]
}
